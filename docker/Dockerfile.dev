# GOFR-Common Development Image
# Extends gofr-base:latest with dev tools for testing shared modules
FROM gofr-base:latest

# Switch to root for package installation
USER root

# Install additional dev tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    gh \
    openssh-server \
    dnsutils \
    net-tools \
    netcat-openbsd \
    telnet \
    lsof \
    htop \
    strace \
    tcpdump \
    vim \
    jq \
    ca-certificates \
    curl \
    gnupg \
    && rm -rf /var/lib/apt/lists/*

# Install Docker CLI (for sibling container management)
RUN install -m 0755 -d /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
    && chmod a+r /etc/apt/keyrings/docker.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(. /etc/os-release && echo "$VERSION_CODENAME") stable" > /etc/apt/sources.list.d/docker.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends docker-ce-cli sudo \
    && rm -rf /var/lib/apt/lists/*

# Create docker group (GID will be adjusted at runtime by entrypoint)
# Give gofr passwordless sudo for docker group management
RUN groupadd -g 999 docker || true \
    && usermod -aG docker gofr \
    && echo "gofr ALL=(ALL) NOPASSWD: /usr/sbin/groupmod, /usr/sbin/groupadd, /usr/sbin/usermod, /bin/chmod" >> /etc/sudoers.d/gofr-docker \
    && chmod 0440 /etc/sudoers.d/gofr-docker

# Create project directories
RUN mkdir -p /home/gofr/devroot/gofr-common/data \
    && chown -R gofr:gofr /home/gofr/devroot

# Copy entrypoint
COPY --chmod=755 docker/entrypoint-dev.sh /entrypoint.sh

WORKDIR /home/gofr/devroot/gofr-common

# SSH config for git operations
RUN mkdir -p /home/gofr/.ssh && chmod 700 /home/gofr/.ssh

# Create venv (will be populated by entrypoint)
RUN uv venv /home/gofr/devroot/gofr-common/.venv --python=python3.11

USER gofr
ENTRYPOINT ["/entrypoint.sh"]
CMD ["tail", "-f", "/dev/null"]
